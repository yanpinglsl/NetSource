@page "/userdetail/{Userid:int}"
<h3>Userdetail</h3>


<h1>Details for @Userinfo.UserName</h1>
<h1>单向绑定:</h1>
<div>
    <h2>@Userinfo.UserName</h2>
    <h2>@Userinfo.BirthDate</h2>
    <h2>@Userinfo.Gender</h2>
</div>

<div>
    <h3>@Userinfo.UserName</h3>
    <h3>@Userinfo.BirthDate</h3>
    <h3>@Userinfo.Gender</h3>
</div>

<hr />

<h1>双向绑定</h1>

<div>
    <h3>Employee Name:</h3>
    <input @bind="@Userinfo.UserName" />
    <h3>Employee BirthDate:</h3>
    <input @bind="@Userinfo.BirthDate" />
    <h3>Employee Gender:</h3>
    <input @bind="@Userinfo.Gender" />
</div>

<h2>不同的触发event:</h2>
<div>
    <h3>Employee Name:</h3>
    <input @bind="@Userinfo.UserName" @bind:event="oninput" />
    <h3>Employee BirthDate:</h3>
    <input @bind="@Userinfo.BirthDate" @bind:event="oninput" />
    <h3>Employee Gender:</h3>
    <input @bind="@Userinfo.Gender" @bind:event="oninput" />
</div>

<div>
    <button @onclick="Button_Click">Click</button>
</div>